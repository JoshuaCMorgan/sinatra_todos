<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li>
        <a class="edit" href="/lists/<%= @id %>/edit">Edit List</a>
      </li>
    </ul>
  </header>
</section> 

<% content_for :header_links do %>
  <a class="list" href="/lists">All Lists</a>
<%end %>
<ul>
<li><%= @list[:todos] %></li>
</ul>

<form action="/lists/<%= @id %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo_item">Enter a  new todo item:</label>
    </dt>
    <dd>
      <input name="todo_item" placeholder="Todo text" type="text" value="">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>