<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li>
        <a class="edit" href="/lists/<%= @id %>/edit">Edit List</a>
      </li>
    </ul>
  </header>
</section> 

<% content_for :header_links do %>
  <a class="list" href="/lists">All Lists</a>
<%end %>

<section id="todos">
  <ul>
    <% @list[:todos].each_with_index do |todo, index| %>
    <li><h3><%= todo[:name] %></h3></li>
    <% end %>
  </ul>
<section id="todos">

<form action="/lists/<%= @id %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a  new todo item:</label>
    </dt>
    <dd>
      <input name="todo" id="todo" placeholder="Something to do" type="text" value="">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>